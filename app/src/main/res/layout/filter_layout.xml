<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:clipToPadding="false"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.chip.ChipGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.chip.Chip
                android:id="@+id/sort_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/sailec_regular"
                android:text="Sort"
                android:textSize="14sp"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:chipBackgroundColor="@color/chip_normal"
                app:chipIcon="@drawable/ic_arrow_down" />

            <com.google.android.material.chip.Chip
                android:id="@+id/price_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/sailec_regular"
                android:text="Price Range"
                android:textSize="14sp"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:chipBackgroundColor="@color/chip_normal"
                app:chipIcon="@drawable/ic_arrow_down" />

            <com.google.android.material.chip.Chip
                android:id="@+id/delivery_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/sailec_regular"
                android:text="Max Delivery Fee"
                android:textSize="14sp"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:chipBackgroundColor="@color/chip_normal"
                app:chipIcon="@drawable/ic_arrow_down" />

            <com.google.android.material.chip.Chip
                android:id="@+id/diet_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/sailec_regular"
                android:text="Dietary"
                android:textSize="14sp"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:chipBackgroundColor="@color/chip_normal"
                app:chipIcon="@drawable/ic_arrow_down" />

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>