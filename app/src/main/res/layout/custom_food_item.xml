<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="6dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/foodimage"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/upload_thumbnail" />


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignEnd="@+id/foodimage"
                android:layout_alignBottom="@+id/foodimage"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/circlebutton"
                android:padding="5dp"
                android:tint="@color/colorPrimary"
                app:srcCompat="@drawable/ic_heart_unfilled" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/foodname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/sailec_medium"
        android:paddingLeft="5dp"
        android:text="Grilled salmon"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foodname"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="6">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_weight="0.4"
            android:tint="@color/colorPrimary"
            app:srcCompat="@drawable/ic_star" />

        <TextView
            android:id="@+id/ratings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.6"
            android:fontFamily="@font/sailec_regular"
            android:text="4.9(200)"
            android:textColor="@android:color/black"
            android:textSize="10sp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="0.4"
            app:srcCompat="@drawable/ic_time" />

        <TextView
            android:id="@+id/times"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.7"
            android:fontFamily="@font/sailec_regular"
            android:paddingLeft="2dp"
            android:text="15-20 min"
            android:textColor="@android:color/black"
            android:textSize="10sp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="0.4"
            app:srcCompat="@drawable/ic_delivery" />

        <TextView
            android:id="@+id/deliverytext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:fontFamily="@font/sailec_regular"
            android:paddingLeft="2dp"
            android:text="Delivery"
            android:textColor="@android:color/black"
            android:textSize="10sp" />


    </LinearLayout>

</LinearLayout>



