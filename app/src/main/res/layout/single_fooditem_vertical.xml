<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        app:cardElevation="10dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/foodimage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/upload_thumbnail"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>


            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@id/foodimage"
                android:layout_alignEnd="@id/foodimage"
                android:gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/circlebutton">

                <com.like.LikeButton
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:anim_scale_factor="1"
                    app:icon_size="20dp"
                    app:icon_type="heart"
                    app:liked="true" />
            </LinearLayout>

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/foodname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sailec_medium"
        android:paddingStart="5dp"
        android:layout_marginTop="12dp"
        android:text="Grilled salmon"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/foodname"
        android:orientation="horizontal"
        android:weightSum="6"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:tint="@color/colorPrimary"
            app:srcCompat="@drawable/ic_star"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/food_ratings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1.6"
            android:fontFamily="@font/sailec_regular"
            android:text="4.9(200)"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.4"
            app:srcCompat="@drawable/ic_time"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/times"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1.7"
            android:fontFamily="@font/sailec_regular"
            android:text="15-20 min"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            app:srcCompat="@drawable/ic_delivery" />

        <TextView
            android:id="@+id/deliverytext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1.5"
            android:fontFamily="@font/sailec_regular"
            android:text="Delivery"
            android:textColor="@android:color/black"
            android:textSize="12sp" />



    </LinearLayout>

</LinearLayout>



